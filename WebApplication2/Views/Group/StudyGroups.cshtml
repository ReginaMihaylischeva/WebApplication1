@model IEnumerable<TestsTesk.Models.Response.GroupResponse>

@{
    ViewData["Title"] = "StudyGroups";
}

<h3>Учебные группы</h3>

<h6>Учебные группы</h6>

<form asp-controller="Group" asp-action="CreateGroup" method="get">

    <table class="table">
        <thead>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Преподаватель
                </th>
                <th>
                    Количество студентов
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountStudents)
                </td>
                <td>
                    <a asp-action="EditStudyGroup" asp-route-id="@item.Id">Редактировать</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Создать учебную группу" class="btn btn-primary" />
    </div>
</form>